---
import type { MenuItem } from "../../../types";
import { formatNumber } from "../../../utils";
import VolumeAndPrice from "../../VolumeAndPrice.astro";

interface Props {
  item: MenuItem;
}

const { item } = Astro.props;

const searchParams = Astro.url.searchParams;

const isBar = searchParams.get("menu") === "bar";

const price = formatNumber(item.price);
---

<article class="flex items-center justify-between text-[18px] md:text-[25px]">
  <p>
    {item.name}
  </p>
  <VolumeAndPrice volume={item.volume} price={item.price} isBar={isBar} />
</article>
