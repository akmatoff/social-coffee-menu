---
import type { Category } from "../../types";
import CategoryButton from "./CategoryButton.astro";

interface Props {
  categories: Category[];
}

const { categories } = Astro.props;
---

<div
  class="flex items-center w-full py-6 px-4 scrollbar-hidden space-x-4 overflow-x-auto"
>
  {
    categories.map((category) => (
      <CategoryButton link={`#category-${category.id}`} client:load>
        {category.name}
      </CategoryButton>
    ))
  }
</div>
